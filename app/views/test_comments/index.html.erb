<p id="notice"><%= notice %></p>

<h1>Listing Test Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_comments.each do |test_comment| %>
      <tr>
        <td><%= link_to 'Show', test_comment %></td>
        <td><%= link_to 'Edit', edit_test_comment_path(test_comment) %></td>
        <td><%= link_to 'Destroy', test_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

